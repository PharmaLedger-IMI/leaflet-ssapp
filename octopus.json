{
  "workDir": ".",
  "dependencies": [
    {
      "name": "../code/lib/zxing-wrapper",
      "src": "http://github.com/webcardinal/zxing-wrapper.git",
      "actions": [
        {
            "type": "smartClone",
            "target": "./zxing-wrapper",
            "collectLog": false,
            "commit": "e9ec10b58d9ad3c9c07d3868ecf8f918aa440d9c"
        }
      ]
    }
  ],
  "prebuild": [
    {
      "name": "PSK bundles",
      "src": "",
      "actions": [
        {
          "type": "execute",
          "cmd": "node ../privatesky/psknode/bin/scripts/pskbuild.js --projectMap=./build/build.json  --prod=true --output=./code/constitution"
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/pskruntime.js",
          "target": "code/constitution/pskruntime.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/webshims.js",
          "target": "code/constitution/webshims.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/pskruntime.js",
          "target": "code/scripts/bundles/pskruntime.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/webshims.js",
          "target": "code/scripts/bundles/webshims.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../privatesky/psknode/bundles/iframeBoot.js",
          "target": "code/scripts/bundles/iframeBoot.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../gtin-resolver/build/bundles/gtinResolver.js",
          "target": "code/scripts/bundles/gtinResolver.js",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "../gtin-resolver/build/bundles/gtinResolver.js",
          "target": "code/constitution/gtinResolver.js",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "Ionic dependencies",
      "actions": [
        {
          "type": "copy",
          "src": "./node_modules/@ionic/core/dist/ionic",
          "target": "./code/ionic/dist"
        },
        {
          "type": "copy",
          "src": "./node_modules/@ionic/core/css",
          "target": "./code/ionic/css"
        },
        {
          "type": "copy",
          "src": "./node_modules/ionicons/dist/ionicons",
          "target": "./code/ionic/icons"
        }
      ]
    }
  ],
  "postbuild": [
    {
      "name": "post build clean up",
      "actions": [
        {
          "type": "remove",
          "target": "./builds"
        }
      ]
    }
  ]
}
